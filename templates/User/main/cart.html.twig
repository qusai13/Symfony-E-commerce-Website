{% extends "User/base.html.twig" %}
{% block title %}My Cart{% endblock %}
{% set amount=0 %}
{% block body %}
    <section class="header_text sub">
        <img class="pageBanner" src="/uploads/gallery/movies-tiles.jpg" alt="New products">
        <h4>
            <span>Shopping Cart</span></h4>
    </section>
    <section class="main-content">
        <div class="row">
        <div class="span12">
            <div style="width:25%;float:left;">
            <ul >
                    <li >
                        <a href="/myaccount">My profile</a>
                    </li>
                    <li>
                        <a href="/comments">My Comments</a>
                    </li>
                    <li>
                        <a  href="/mycarts">My Orders</a>
                    </li>
                    <li>
                        <a href="/cart">My Cart</a>
                    </li>
                    
                </ul>
            </div>
            <div style="width:75%;float:left;">
                <h4 class="title">
                    <span class="text">
                        <strong>Your</strong>
                        Cart</span></h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cart in carts %}
                            <tr>
                               
                                <td>
                                    <a href="/"><img alt="" src="/uploads/product_imgs/{{cart.img}}" style="height:100px"></a>
                                </td>
                                <td>{{cart.title}}</td>
                                <td><input type="text" placeholder="1" class="input-mini" value="{{cart.quantity}}" disabled></td>
                                <td>${{cart.price}}</td>
                                <td>${{cart.quantity * cart.price}}</td>
								{% set amount=amount+(cart.quantity * cart.price) %}
								<td> 
								<a  href="/cart/delete/{{cart.id}}" onclick="confirm('are you sure?')">
                              <button type="button" rel="tooltip" title="" class="btn btn-white btn-link btn-sm" data-original-title="Remove">
                                <i class="material-icons" style="color:red;">Delete</i>
                              </button>
                              </a>
								</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>
                                <strong>Total payments: ${{ amount }}.</strong>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr/>
                <p class="buttons center">
                    <a href="/" class="btn" type="button">Back to market</a>
                    <a href="/cart/ready" class="btn btn-inverse" type="submit" id="Next">Next</a>
                </p>
            </div>
            </div>
        </div>
    </section>
{% endblock %}