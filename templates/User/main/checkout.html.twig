{% block title %}Check out{% endblock %}
{% block body %}
        <div>
            <div class="accordion-inner">
                <div class="row-fluid">
                    <div class="span6">
                        <h4>Your Personal Details</h4>
                     <div class="control-group">
                        <form method="post">
                            <label class="control-label">
                               
                           <form action="post">
						      <div class="control-group">
