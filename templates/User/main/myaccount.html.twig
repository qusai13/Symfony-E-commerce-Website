{% extends 'User/base.html.twig' %}
{% block title %}My account{% endblock %}

{% block body %}
    <section class="header_text sub">
        <img class="pageBanner" src="/uploads/gallery/movies-tiles.jpg" alt="New products">
        <h4>
            <span>
                My Account
            </span>
        </h4>
    </section <section class="main-content">
    <div class="row" style="margin-left:10px">

        <div class="container bootstrap snippet">

            <div class="row"></div>
            <!--/col-3-->
            <div class="col-sm-3" style="width:25%;float:left;">
                <ul>
                    <li >
                        <a href="/myaccount">My profile</a>
                    </li>
                    <li>
                        <a  href="/comments">My Comments</a>
                    </li>
                    <li>
                        <a  href="/mycarts">My Orders</a>
                    </li>
                    <li>
                        <a href="/cart">My Cart</a>
                    </li>
                </ul>
            </div>
                <div class="col-sm-9" style="width:75%;float:left;">
                    <div class="tab-pane active" id="home">
                        <hr>
                        <form class="form" method="post" id="registrationForm">
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="first_name">
                                        <h4>Name</h4>
                                    </label>
                                    <input type="text" class="form-control" name="name" id="first_name" value="{{app.user.name}}" title="enter your first name if any.">
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="phone">
                                        <h4>Phone</h4>
                                    </label>
                                    <input type="text" class="form-control" name="tel" id="phone" value="{{app.user.tel}}" title="enter your phone number if any.">
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="email">
                                        <h4>Email</h4>
                                    </label>
                                    <input type="email" class="form-control" name="email" id="email" value="{{app.user.email}}" title="enter your email.">
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="password">
                                        <h4>Address</h4>
                                    </label>
                                    <input type="text" class="form-control" name="address" id="password" value="{{app.user.address}}" title="enter your password.">
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="password2">
                                        <h4>New Password</h4>
                                    </label>
                                    <input type="password" class="form-control" name="newpass" id="password2" placeholder="new password" title="enter your password2.">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input type="hidden" name="token" value="{{csrf_token('myaccount')}}" class="input-xlarge">
                                    <br>
                                    <div class="control-group">
                                        <p>
                                            {% if msg is defined and msg != "" %}
                                                <div class="alert alert-success" role="alert">
                                                    {{msg}}
                                                </div>
                                            {% endif %}
                                        </p>
                                    </div>
                                    <button class="btn btn-lg btn-success" type="submit" style="margin-bottom:10px">
                                        <i class="glyphicon glyphicon-ok-sign"></i>
                                        Save</button>
                                    <button class="btn btn-lg" type="reset" style="margin-bottom:10px">
                                        <i class="glyphicon glyphicon-repeat"></i>
                                        Reset</button>
                                </div>
                            </div>

                        </form>

                        <hr>

                    </div>
                    <!--/tab-pane-->

                </div>
                </div>
                <!--/tab-content-->

            </div>
            <!--/col-9-->
        </div>
        <!--/row-->
    </div>
</section>

{% endblock %}
