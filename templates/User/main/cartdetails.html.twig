{% extends "User/base.html.twig" %}
{% block title %}Cart Details{% endblock %}
{% set amount=0 %}
{% block body %}
    <section class="header_text sub">
        <img class="pageBanner" src="/uploads/gallery/movies-tiles.jpg" alt="New products">
        <h4>
            <span>Shopping Cart</span></h4>
    </section>
    <section class="main-content">
        <div class="row">
            <div class="span12">
                <h4 class="title">
                    <span class="text">
                        <strong>Your</strong>
                        Cart</span></h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            
                            <th>Image</th>
                            <th>Product description</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                            
                            
                        </tr>
                    </thead>
                    <tbody>
                        {% for order_detail in order_details %}
                            <tr>
                                  <td>
                                    <a href="/"><img alt="" src="/uploads/product_imgs/{{order_detail.img}}" style="height:100px"></a>
                                </td>
                                <td>{{order_detail.descrip}}</td>
                                 <td>{{order_detail.quantity}}</td>
                                <td>${{order_detail.price}}</td>
                                 <td>${{order_detail.amount}}</td>
                            
                        {% endfor %}
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            
                        </tr>
                    </tbody>
                </table>
                <div>total price :{{order.total}}</div>
                <div>payment type :{{order.paymenttype}}</div>
                <div>Ship name :{{order.shipname}}</div>
                <div>shio address :{{order.shipaddress}}</div>
                <div>ship phone :{{order.shiptel}}</div>
                <div>ship info :{{order.shipinf}}</div>
                <div>ship company :{{order.shipcompany}}</div>
                <div>note :{{order.note}}</div>
                <p class="buttons center">
                    
                    <a href="/" class="btn" type="button">Back to market</a>
                    
                </p>
            </div>
        </div>
    </section>
{% endblock %}