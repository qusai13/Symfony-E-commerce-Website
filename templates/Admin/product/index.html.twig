{% extends "Admin/Base.html.twig" %}
{% block body %}
<div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title ">Products Table</h4>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                      <a href="{{path('admin_product_add')}}" class="btn btn-primary pull-left" onclick="product_edit(this)">Add new product</a>
                        <th>
                          ID
                        </th>
                        <th>
                          Title
                        </th>
                        <th>
                          Image
                        </th>
                        <th>
                          Category
                        </th>
                        <th>
                          Buy Price
                        </th>
                        <th>
                          Sell Price
                        </th>
                        <th>
                          Amount
                        </th>
                        <th>
                          Action
                        </th>
                      </thead>
                      <tbody>
                      {%for product in products %}
                        <tr>
                          <td>
                            {{product.id}}
                          </td>
                          <td>
                            {{product.title}}
                          </td>
                          <td>
                           <image src="/uploads/product_imgs/{{product.image}}" style="height:100px;width:100px;border-radius: 20%;"/>
                          </td>
                          <td>
                            {{product.cat_title}}
                          </td>
                          <td>
                            {{product.pprice}}
                          </td>
                           <td>
                            {{product.sprice}}
                          </td>
                          <td>
                            {{product.amount}}
                          </td>
                          <td>
                            <a  href="/admin/product/edit/{{product.id}}">
                            <button type="button" rel="tooltip" class="btn btn-white btn-link btn-sm" data-original-title="Edit Product">
                                <i class="material-icons">edit</i>
                            </button>
                            </a>
                            <a href="/admin/product/delete/{{product.id}}" onclick="return confirm('are you sure?')">
                                <button type="button" rel="tooltip" title="" class="btn btn-white btn-link btn-sm" data-original-title="Remove">
                                <i class="material-icons">close</i>
                              </button>
                            </a>
                            <a  href="/admin/gallery/{{product.id}}">
                            <button type="button" rel="tooltip" class="btn btn-white btn-link btn-sm" data-original-title="Product Gallery">
                                <i class="material-icons">collections</i>
                            </button>
                            </a>
                          </td>
                          
                        </tr>
                       {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
<script>
(function() {
    document.getElementById("navbar_title").innerText="Products";
    document.getElementById("sidebar_products").setAttribute("class","nav-item active");
    
})();
</script>
{% endblock %}

